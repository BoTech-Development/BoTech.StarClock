<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:BoTech.StarClock.Views"
        xmlns:dialogHostAvalonia="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
        x:Class="BoTech.StarClock.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="BoTech.StarClock"
        Width="800"
        Height="480"
        CanResize="False"
        SystemDecorations="Full" 
        WindowState="Maximized"
        Topmost="True">
    <!--More Info for Window definition here: https://github.com/AvaloniaUI/Avalonia/issues/2759
    https://forums.raspberrypi.com/viewtopic.php?t=358654-->
    <dialogHostAvalonia:DialogHost Identifier="MainDialogHost"
                                   DialogMargin="16"
                                   dialogHostAvalonia:DialogHostStyle.CornerRadius="8" 
                                   Background="White">
            <views:SlideShowView />
        </dialogHostAvalonia:DialogHost>
</Window>
