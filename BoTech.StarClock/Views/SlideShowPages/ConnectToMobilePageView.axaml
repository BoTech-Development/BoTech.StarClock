<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:qr="clr-namespace:Avalonia.Labs.Qr;assembly=Avalonia.Labs.Qr"
             xmlns:vm="clr-namespace:BoTech.StarClock.ViewModels.SlideShowPages"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BoTech.StarClock.Views.SlideShowPages.ConnectToMobilePageView"
             x:DataType="vm:ConnectToMobilePageViewModel">
    <Design.DataContext>
        <vm:ConnectToMobilePageViewModel/>
    </Design.DataContext>
    <StackPanel>
        <qr:QrCode Data="{Binding IpAddress}"
                   Foreground="Black"/>
        <TextBlock HorizontalAlignment="Center" 
                   Margin="32"
                   FontSize="20"
                   FontWeight="Bold"
                   Text="{Binding IpAddress}"/>
    </StackPanel>
</UserControl>
