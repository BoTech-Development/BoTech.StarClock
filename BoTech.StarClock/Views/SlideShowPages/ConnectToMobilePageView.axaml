<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:qr="clr-namespace:Avalonia.Labs.Qr;assembly=Avalonia.Labs.Qr"
             xmlns:vm="clr-namespace:BoTech.StarClock.ViewModels.SlideShowPages"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BoTech.StarClock.Views.SlideShowPages.ConnectToMobilePageView"
             x:DataType="vm:ConnectToMobilePageViewModel">
    <Design.DataContext>
        <vm:ConnectToMobilePageViewModel/>
    </Design.DataContext>
    <RelativePanel>

        <avalonia:MaterialIcon Kind="StarShooting"
                               Width="164"
                               Height="164"
                               RelativePanel.AlignBottomWithPanel="True"
                               Margin="140,0,0,40"
                               Foreground="Orange"/>
        <avalonia:MaterialIcon Kind="Link"
                               Width="64"
                               Height="64"
                               RelativePanel.AlignHorizontalCenterWithPanel="True"
                               RelativePanel.AlignVerticalCenterWithPanel="True"
                               Animation="FadeOutIn"
                               Foreground="Blue">
            <avalonia:MaterialIcon.Styles>
                <Style>
                    <Setter Property="RotateTransform.Angle" Value="45"/>
                </Style>
            </avalonia:MaterialIcon.Styles>
        </avalonia:MaterialIcon>
        <avalonia:MaterialIcon Kind="MonitorCellphoneStar"
                               Width="164"
                               Height="164"
                               RelativePanel.AlignTopWithPanel="True"
                               RelativePanel.AlignRightWithPanel="True"
                               Margin="0,40,140,0"
                               Foreground="Orange"/>
        <StackPanel Margin="128" 
                    Orientation="Horizontal">
            <TextBlock HorizontalAlignment="Center" 
                       FontSize="20"
                       FontWeight="Bold"
                       Text="{Binding IpAddress}"
                       Margin="0,0,10,0"/>
            <Button HorizontalAlignment="Center"
                    Command="{Binding ReloadCommand}">
                <avalonia:MaterialIcon Kind="Reload"
                                       Width="32"
                                       Height="32"/>
            </Button>
        </StackPanel>
        <TextBlock FontSize="16"
                   FontWeight="Bold"
                   RelativePanel.AlignBottomWithPanel="True"
                   RelativePanel.AlignRightWithPanel="True"
                   Margin="32,64">
            Connect to the Mobile App.<LineBreak/>
            More Info on: aka.botech.dev/bot.scc/install.
        </TextBlock>
    </RelativePanel>
</UserControl>
